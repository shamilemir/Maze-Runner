<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="OFF"> 
<!-- "INFO" to enable -->
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5level] %logger{0} %msg%n" />
        </Console>
    </Appenders>

    <Loggers>
        <Root level="off">
        <!-- "info" to enable -->
            <AppenderRef ref="console" />
        </Root>
    </Loggers>
</Configuration>